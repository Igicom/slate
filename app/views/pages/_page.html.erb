<li>
  <%= page_glyph(page) %> 
  <%= link_to page.name, resource_path(page), :class => 'item' %>
  <span class="actions">
    -
    <%= link_to 'Edit', edit_resource_path(page) %>
    <%= link_to glyph('add'), new_resource_path(page), :title => 'Add child page' %>

    <% unless page.mount? %>
      <%= link_to glyph('delete'), resource_path(page), :method => :delete, :confirm => 'Destroy this page?', :title => 'Delete this page' %>
    <% end %>
  </span>
  
  <ul>
    <%= render :partial => 'page', :collection => page.children %>
  </ul>  
</li>