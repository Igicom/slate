<% fieldset 'Account Information' do %>
  <%= form.text_field :username, :autocomplete => 'off' %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation, :label => 'Confirm' %>
  <%= form.text_field :email_address, :label => 'Email' %>
<% end %>

<% fieldset 'Personal Information' do %>
  <%= form.text_field :first_name %>
  <%= form.text_field :last_name %>
<% end %>  