<tr class="field">
  <td class="info">
    <%= label unless label.blank? or helper == 'check_box' %>
    <%= content_tag(:p, tip, :class => 'tip') unless tip.blank? %>
  </td>
  <td class="input">
    <%= element %>
    <%= label unless label.blank? or helper != 'check_box' %>
  </td>
  <td class="error">  
    <%= errors %>
  </td>
</tr>  